<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/color_single_item"
    app:cardCornerRadius="@dimen/margin_xsmall"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_xsmall"
    android:layout_marginBottom="@dimen/margin_xsmall">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/margin_medium"
            android:src="@mipmap/ic_launcher"
            android:elevation="4dp"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_user_avatar"
            android:layout_alignTop="@id/iv_user_avatar"
            android:layout_toRightOf="@id/iv_user_avatar"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_small"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_small"
            tools:text="cnkaptan"
            android:textColor="@android:color/white"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
